"node": "20.9.0",
"yarn": "4.0.1"
},
"devDependencies": {
"@babel/core": "^7.23.2",
"@babel/preset-env": "^7.23.2",
"autoprefixer": "^10.4.16",
"babel-loader": "^9.1.3",
"concurrently": "^8.2.2",
"copy-webpack-plugin": "^11.0.0",
"http-server": "^14.1.1",
"husky": "^8.0.3",
"lint-staged": "^15.1.0",
"postcss": "^8.4.31",
"postcss-cli": "^10.1.0",
"prettier": "^3.1.0",
"sass": "^1.69.5",
"webpack": "^5.89.0",
"webpack-cli": "^5.1.4"
},
"browserslist": [
